datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            Int           @id @default(autoincrement())
  name          String
  slug          String        @unique
  icon          String?
  subcategories Subcategory[]
}

model Subcategory {
  id         Int       @id @default(autoincrement())
  name       String
  slug       String    @unique
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId Int
  sections   Section[]
}

model Section {
  id            Int         @id @default(autoincrement())
  title         String
  subtitle      String?
  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id])
  subcategoryId Int
}
